<nav class="tabs top">
  <a id="tab-chat" class="tabbtn active" href="#chat" onclick="showPane('chat')">Chat</a>
  <a id="tab-feed" class="tabbtn"        href="#feed" onclick="showPane('feed')">Feed</a>
</nav>

<main>
  <!-- Chat pane (your normal chat view goes here; this is a placeholder) -->
  <section id="pane-chat" class="pane active">
    <div class="card">
      <h2 style="margin:0 0 8px">Chat</h2>
      <p>This is your chat area. (Keep using the app as normal.)</p>
    </div>
  </section>

  <!-- Feed pane embeds the horizontal feed you generated -->
  <section id="pane-feed" class="pane">
    <div class="feedwrap">
      <iframe src="feed_preview.html"></iframe>
    </div>
  </section>
</main>

<script>
  function showPane(name){
    document.getElementById('pane-chat').classList.toggle('active', name==='chat');
    document.getElementById('pane-feed').classList.toggle('active', name==='feed');
    document.getElementById('tab-chat').classList.toggle('active', name==='chat');
    document.getElementById('tab-feed').classList.toggle('active', name==='feed');
    try{ localStorage.setItem('ta_active_tab', name); }catch(_){}
  }
  // Restore last tab
  (function(){
    try{
      var last = localStorage.getItem('ta_active_tab');
      if(last && (last==='feed' || last==='chat')) showPane(last);
    }catch(_){}
  })();
</script>
